<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <ImageView
        android:layout_marginLeft="5dp"
        android:paddingTop="5dp"
        android:id="@+id/chatIcon"
        android:layout_marginTop="6dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle"/>


    <TextView
        android:id="@+id/conversationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTitle"
        android:textSize="15sp"
        android:scrollHorizontally="true"
        android:maxLines="2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Message Message Message Message Message Message Message Message Message"
        android:textAllCaps="false"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/time" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingTop="10dp"
        android:textSize="8sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="4 Jun 5:32 pm"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/conversationTitle" />

    <TextView
        android:id="@+id/userNameConversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingTop="10dp"
        android:textSize="8sp"
        android:layout_marginLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="Tom,Dick,Jane"
        android:textStyle="bold|italic"
        android:layout_marginStart="11dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/time" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/nameIcon"
        android:paddingLeft="6.5dp"
        android:paddingTop="17dp"
        tools:text="M"
        android:textColor="@color/whitegrey"
        android:layout_marginStart="11dp" />

</RelativeLayout>